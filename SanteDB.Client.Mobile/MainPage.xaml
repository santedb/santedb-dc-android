<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sdb="clr-namespace:SanteDB.Client.Mobile"
             x:Class="SanteDB.Client.Mobile.MainPage">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" RowDefinitions="1*, auto">
        <Border Grid.Row="0" StrokeThickness="0">
            <WebView x:Name="WebView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  />
        </Border>
        <sdb:NotificationBar x:Name="NotificationBar" Grid.Row="1" />
    </Grid>
</ContentPage>
